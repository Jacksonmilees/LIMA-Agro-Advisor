        {
            "name": "8. Get Journal Summary",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Summary data present\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData).to.have.property('total_entries');",
                            "    pm.expect(jsonData).to.have.property('total_activities');",
                            "    pm.expect(jsonData).to.have.property('total_activity_cost');",
                            "    pm.expect(jsonData).to.have.property('total_labor_hours');",
                            "});",
                            "",
                            "var jsonData = pm.response.json();",
                            "console.log(\"✅ Journal summary retrieved!\");",
                            "console.log(\"   Farm:\", jsonData.farm_name);",
                            "console.log(\"   Entries:\", jsonData.total_entries);",
                            "console.log(\"   Activities:\", jsonData.total_activities);",
                            "console.log(\"   Total Cost: KES\", jsonData.total_activity_cost);",
                            "console.log(\"   Total Labor:\", jsonData.total_labor_hours, \"hours\");"
